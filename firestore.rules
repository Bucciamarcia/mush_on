rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }

    function userAccount() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.account
        : null;
    }

    // Users can fully manage their own user doc
    match /users/{uid} {
      allow read, write: if isSignedIn() && uid == request.auth.uid;
    }

    // Public-facing content: anyone can read; only members of the account can write
    match /customerFacing/{account}/{document=**} {
      allow read: if true;  // public (no auth required)
      allow write: if isSignedIn() && userAccount() == account;
    }

    // Restrict account data to the user's assigned account
    match /accounts/{account}/{document=**} {
      allow read, write: if isSignedIn() && userAccount() == account;
    }

    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
